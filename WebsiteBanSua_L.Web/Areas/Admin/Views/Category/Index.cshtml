@model List<Model.Entities.Category>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

@if (Model != null)
{

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">List product</h5>
            <a href="/Admin/Category/Create" method="post" class="btn btn-danger">Add new</a>
            <table class="table">
                <thead>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/Admin/Category/Update/@item.Id">Edit</a>
                                <a href="/Admin/Category/Delete/@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>No categories found.</p>
}