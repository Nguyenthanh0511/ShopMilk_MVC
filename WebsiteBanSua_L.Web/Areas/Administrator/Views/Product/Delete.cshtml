@model Model.Entities.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Product</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this product?</h5>

        <form asp-area="Administrator" asp-controller="Product" asp-action="Delete" method="post">
            <div class="row mb-3">
                <label asp-for="Id" class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-10">
                    <input asp-for="Id" type="text" class="form-control" id="inputId" readonly />
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" id="inputName" readonly />
                </div>
            </div>
            <div class="text-center">
                <input asp-for="Id" type="hidden" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-area="Administrator" asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
