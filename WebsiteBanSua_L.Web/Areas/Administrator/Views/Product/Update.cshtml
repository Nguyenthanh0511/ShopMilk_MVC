@model Model.Entities.Product

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update Product</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Update Product</h5>

        <form asp-area="Administrator" asp-controller="Product" asp-action="Update" method="post">
            <div class="row mb-3">
                <label asp-for="Id" class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-10">
                    <input asp-for="Id" class="form-control" readonly />
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" id="inputName">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Image URL</label>
                <div class="col-sm-10">
                    <input asp-for="ImageUrl" type="text" class="form-control" id="inputImageUrl">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input asp-for="Description" type="text" class="form-control" id="inputDescription">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input asp-for="Price" type="number" step="0.01" class="form-control" id="inputPrice">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="CateId" class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">
                    <input asp-for="CateId" type="number" class="form-control" id="inputCateId">
                    <span asp-validation-for="CateId" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
