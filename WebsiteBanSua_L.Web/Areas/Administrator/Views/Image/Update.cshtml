@model Model.Entities.Image;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update</h1>

<form action="/Administrator/Image/Update" method="post">
    <div class="row mb-3">
        <label asp-for="Id" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" readonly />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="thumbnail" class="col-sm-2 col-form-label">NameUrl</label>
        <div class="col-sm-10">
            <input asp-for="thumbnail" type="text" class="form-control" id="inputName">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ProdId" class="col-sm-2 col-form-label">Product ID</label>
        <div class="col-sm-10">
            <input asp-for="ProdId" type="text" class="form-control" id="inputProdId">
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>
