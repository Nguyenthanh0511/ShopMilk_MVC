@model Model.Entities.Image

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Image</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Image</h5>

        <!-- Horizontal Form -->
        <form asp-area="Administrator" asp-controller="Image" asp-action="Create" method="post">
            <div class="row mb-3">
                <label asp-for="Id" class="col-sm-2 col-form-label">ID</label>
            </div>
            <div class="row mb-3">
                <label asp-for="thumbnail" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="thumbnail" type="text" class="form-control" id="inputName">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ProdId" class="col-sm-2 col-form-label">IdProduct</label>
                <div class="col-sm-10">
                    <input asp-for="ProdId" type="text" class="form-control" id="inputName">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</div>
