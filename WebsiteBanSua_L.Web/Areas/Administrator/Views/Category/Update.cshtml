@model Model.Entities.Category;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update</h1>


<form action="/Administrator/Category/Update" method="post">
    <div class="row mb-3">
        <label asp-for="Id" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" readonly />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" type="text" class="form-control" id="inputName">
        </div>
    </div>
    <div class="text-center">
        <button type="submit" value="Thêm mới" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>